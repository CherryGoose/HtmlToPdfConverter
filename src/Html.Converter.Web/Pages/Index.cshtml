@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Html.Converter.Localization
@using Volo.Abp.Users
@model Html.Converter.Web.Pages.IndexModel
@inject IHtmlLocalizer<ConverterResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
    @section scripts {
    <abp-script src="/Pages/Index.js" />
}
<abp-card>
        <abp-card-header>
        <h3>FileUploadandDownload</h3>
        </abp-card-header>
            
        <abp-card-body>
        <abp-row>
                
        <abp-column>
                <h3>UploadFile</h3>
                <hr/>
                <form method="post"enctype="multipart/form-data">

                <abp-input asp-for="FileDto.File">

                </abp-input>
                <input type="submit"class="btn btn-info"/>
                </form>
        </abp-column>
            <abp-column style="border-left: 1px dotted gray">
                <h3>DownloadFile</h3>
                <hr/> <form id="DownloadFile">
                    <div class="form-group">
                        <label for="fileName">Filename</label>
                        <span>*</span>
                        <input type="text" id="fileName" name="fileName" class="form-control ">
                    </div> <input type="submit"class="btn btn-info"/>
                    </form>
                    </abp-column>
        </abp-row>

        <abp-row>
                 <h3>Convert</h3>
                             <abp-button id="ConvertButton" button-type="Primary" text="Convert"/>

                                  <abp-input asp-for="@Model.GeneratedFileId" type="hidden" class="form-control" />
        </abp-row>
        </abp-card-body>
    </abp-card>
